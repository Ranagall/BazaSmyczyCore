@model Leash

@using BazaSmyczy.Core.Utils

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit" enctype="multipart/form-data" asp-route-returnurl="@ViewData["ReturnUrl"]" asp-antiforgery="true" method="post">
    <div class="form-horizontal">
        <h4>Leash</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ID" />
        <input type="hidden" asp-for="ImageName" />
        <input type="hidden" asp-for="CreationTime" />
        <div class="form-group">
            <label asp-for="Text" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Text" class="form-control" />
                <span asp-validation-for="Text" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Color" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Size" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Size, new SelectList(Enum.GetValues(typeof(LeashSize))), new { @class = "form-control" })
                <span asp-validation-for="Size" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Desc" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Desc" class="form-control" />
                <span asp-validation-for="Desc" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Image</label>
            <div class="col-md-10">
                <input class="form-control" type="file" name="picture" accept="image/jpg,image/jpeg,image/png" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

<div>
    <a href="@ViewData["ReturnUrl"]" class="btn btn-default">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
