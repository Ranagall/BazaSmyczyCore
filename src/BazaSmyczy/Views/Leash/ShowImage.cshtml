@model Leash

@using Microsoft.Extensions.Options;

@inject IOptions<BazaSmyczy.Core.Config.BazaSmyczyOptions> options

<script src="~/js/removeModalData.js"></script>

<div id="modal-show-image">

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>

    <div class="modal-body">
        <img src="~/@options.Value.UploadsPath/@Model.ImageName" alt="Image" class="img-responsive center-block" />
    </div>

</div>
